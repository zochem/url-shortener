<div class="col-md-6 offset-md-3 w">
    {{!-- <h2>You are welcome, stranger!</h2> --}}
    <h3 style="padding-bottom: 15px;">{{viewTitle}}</h3>
        <form action="/shorturl" method="POST" autocomplete="off">
            <input type="hidden" name="id" value="{{shortUrl._id}}">
                <div class="row">
                    <div class="form-group col-md-8">
                        <label>Url</label>
                        <input type="text" class="form-control" name="url" placeholder="Type your url here" value="{{shortUrl.url}}">
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-8">
                        <label>Name</label>
                        <input type="text" class="form-control" name="name" placeholder="How do you want to call me?" value="{{shortUrl.name}}">
                    </div>
                </div>

                <div class="form-group">
                    <button class="btn btn-success" type="submit"><i class="fa fa-database"></i> Submit</button>
                    <a class="btn btn-secondary" href="shorturl/list"><i class="fa fa-list-alt"></i> List</a> 
                </div>
        </form>
</div>